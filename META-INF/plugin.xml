<idea-plugin version="2">
  <name>Identifier Highlighter Reloaded</name>
  <description>Gives you one-stroke way to navigate to next/previous identifier occurrence.</description>
  <version>1.0</version>
  <vendor>YourCompany</vendor>
  <idea-version since-build="8000"/>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <action id="NextIdentifier" class="com.olegych.ihr.actions.NextIdentifierAction"
            text="Next Identifier">
      <keyboard-shortcut keymap="$default" first-keystroke="shift alt DOWN"/>
    </action>
    <action id="PreviousIdentifier" class="com.olegych.ihr.actions.PreviousIdentifierAction"
            text="Previous Identifier">
      <keyboard-shortcut keymap="$default" first-keystroke="shift alt UP"/>
    </action>

  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>
</idea-plugin>